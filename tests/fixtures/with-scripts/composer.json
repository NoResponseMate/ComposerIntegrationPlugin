{
    "name": "no-response-mate/with-scripts",
    "description": "Test project",
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "composer/semver": "~3.2.0"
    },
    "repositories": [
        {
            "type": "path",
            "url": "../../../*"
        }
    ],
    "require-dev": {
        "no-response-mate/composer-integration-plugin": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "ComposerIntegration\\": "../../src/"
        }
    },
    "config": {
        "allow-plugins": {
            "no-response-mate/composer-integration-plugin": true
        }
    },
    "extra": {
        "integration": {
            "with-scripts": {
                "require": {
                    "psr/http-message": "^1"
                }
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "php script.php"
        ]
    }
}
